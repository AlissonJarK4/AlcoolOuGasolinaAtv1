<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/roxo2"
    android:backgroundTint="@color/roxo2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/rounded_layout"
        android:backgroundTint="?android:backgroundTint"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="754dp"
            android:layout_height="590dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:contentDescription="@string/uma_bomba_de_gasolina_ilustrando_o_app"
            android:paddingVertical="20dp"
            android:paddingTop="50px"
            android:textAlignment="center"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="@string/gasolina_ou_lcool"
            android:textAlignment="center"
            android:textColor="@color/roxo2"
            android:textSize="60sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edGasolina"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/pre_o_da_gasolina"
            android:inputType="numberDecimal"
            android:textSize="60sp"/>

        <EditText
            android:id="@+id/edAlcool"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/pre_o_do_lcool"
            android:inputType="numberDecimal"
            android:textSize="60sp" />

        <Switch
            android:id="@+id/swPercentual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:text="75%"
            android:textColorHighlight="@color/roxo1"
            android:textColorLink="@color/roxo1"
            android:textSize="60sp"/>

        <Button
            android:id="@+id/btCalcular"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            android:layout_weight="1"
            android:backgroundTint="@color/verde1"
            android:text="@string/calcular"
            android:textSize="60sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>